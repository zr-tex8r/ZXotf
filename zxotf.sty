  \expandafter\zxot@tempmute@b\csname#2\expandafter\endcsname
  \csname zxot@org@#2\endcsname#1}
\def\zxot@tempmute@b#1#2#3{% \CSY\zxot@org@CSY\CSX
  \g@addto@macro\zxot@tempmute@revert{\let#1#2}%
  \let#2#1\let#1#3}

